<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="iot.mk.com.iotapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserHomeActivity"
            android:label="@string/title_activity_user_home"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".ControlPanelActivity" />
        <activity
            android:name=".UserRegistrationActivity"
            android:label="@string/title_activity_user_registration"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".DevicesStatusActivity"
            android:label="@string/title_activity_devices_status"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".AlarmActivity"
            android:label="@string/title_activity_alarm"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <service
            android:name=".AlarmService"
            android:exported="false" />

        <activity
            android:name=".AlarmListActivity"
            android:label="@string/title_activity_alarm_list"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
    </application>

</manifest>
